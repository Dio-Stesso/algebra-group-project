		</div>
		break;
	case "6":
		<div>
			<p>This is the active element.</p>
		</div>
		break;
	case "7":
		<div>
			<p>This is the active element.</p>
		</div>
		break;
	case "8":
		<div>
			<p>This is the active element.</p>
		</div>
		break;
	case "9":
		<div>
			<p>This is the active element.</p>
		</div>
		break;
	case "10":
		<div>
			<p>This is the active element.</p>
		</div>
		break;
	default:
		break;
}


@code {
	public static string coefModule { get; set; } = "";

	public string firstInputBox { get; set; } = "";
	public string secondInputBox { get; set; } = "";
	public string selected { get; set; } = "";

	private void SelectedMethod(ChangeEventArgs e)
	{
		if (!string.IsNullOrWhiteSpace((string)e.Value))
		{
			selected = (string)e.Value;
		}
	}
}











